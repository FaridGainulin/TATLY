.form-modal
  &__feedback
    position relative
    border-radius: 15px;
    color: #fff
    padding: 12px
    background-color: rgba(101, 150, 60, 0.7);
    box-shadow: 0px 2px 22px 0px #E1EFB8
    // border: 6px solid #fff;
