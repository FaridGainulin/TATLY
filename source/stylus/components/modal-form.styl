  &__info-title
    font-size: 14px;
    margin: 0 0 18px 0
    font-family: 'Raleway-Bold'
    font-weight: 700
    +above($breakpoints.sm)
      font-size: 16px
    +above($breakpoints.md)
      font-size: 18px
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      font-size: 24px
    br
      display: block

  &__feedback-item
    max-width: 255px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 280px
    +above($breakpoints.xxl)
      max-width: 343px

  &__feedback-input
    height: 55px
    margin-bottom: 10px
    +above($breakpoints.sm)
      height: 60px
      margin-bottom: 15px
    +above($breakpoints.xxl)
      height: 64px
      margin-bottom: 20px
    .input
      &__field
        height: 100%
        border: none

  &__button
    margin-bottom: 14px
    .btn
      height: 50px
      font-size: 12px !important
      +above($breakpoints.sm)
        font-size: 14px !important
        height: 60px
      +above($breakpoints.xxl)
        font-size: 16px !important
        height: 58px

  &__agree
    font-size: 10px;
    line-height: 13px;
    font-family: 'Raleway-Regular'
    +above($breakpoints.sm)
      font-size: 11px;
      line-height: 13px;
    +above($breakpoints.md)
      font-size: 12px;
      line-height: 14px;
    +above($breakpoints.xxl)
      font-size: 13px;
      line-height: 15px;
    a
      text-decoration: underline
