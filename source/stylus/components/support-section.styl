.support-section
  // background-image: url('../images/support-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff
  padding-bottom: 20px
  +above($breakpoints.sm)
    padding-bottom: 50px
  +above($breakpoints.md)
    padding-bottom: 80px
  +above($breakpoints.xxl)
    padding-bottom: 133px

  &__wrapper
    position relative
    background-color #F5F5F5
    border-radius: 20px
    width 350px
    margin 0 auto
    border-radius: 20px
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      width 820px
      border-radius: 30px
      padding 40px 0 40px 0
    +above($breakpoints.md)
      width 1100px
      border-radius: 50px
      padding 60px 0 60px 0
    +above($breakpoints.xxl)
      width 1320px
      border-radius: 60px
      padding 84px 0 83px 0
    +above($breakpoints.xxxl)
      width 1480px

  &__shadow
    position relative
    z-index 1
    &:before
      content: ""
      position: absolute
      z-index -1
      filter: blur(100px);
      background: rgb(224, 244, 208)
      width 200px
      height: 200px
      top: 50%
      left: 50%
      transform: translate(-140%, -50%)
      +above($breakpoints.sm)
        width 197px
        height: 197px
        transform: translate(-260%, -50%)
      +above($breakpoints.md)
        filter: blur(170px);
        width 297px
        height: 297px
      +above($breakpoints.xxl)
        transform: translate(-220%, -50%)
        width 397px
        height: 397px

  &__title
    padding 0 0 20px 0
    text-align: center
    line-height: 100%
    font-size: 17px
    +above($breakpoints.sm)
      line-height: 120%
      font-size: 30px
      padding 0 0 40px 0
    +above($breakpoints.md)
      font-size: 40px
      padding 0 0 50px 0
    +above($breakpoints.xxl)
      font-size: 54px
      padding 0 0 61px 0

  &__body
    position relative
    display: flex
    flex-direction: column
    +above($breakpoints.sm)
      flex-direction: row-reverse
      align-items: center
      gap: 20px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 67px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 15px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 28px

  &__card
    width 260px !important
    display: flex
    align-items: center
    gap: 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      width 300px !important
    +above($breakpoints.md)
      gap: 16px
      width 450px !important
    +above($breakpoints.xxl)
      width 505px !important

  &__card-icon
    width 25px
    height: 25px
    +above($breakpoints.sm)
      width 24px
      height: 24px
    +above($breakpoints.md)
      width 28px
      height: 28px
    +above($breakpoints.xxl)
      width 30px
      height: 30px

  &__img
    width 308px
    height: auto
    border-radius: 15px
    position relative
    +above($breakpoints.sm)
      width 360px
    +above($breakpoints.md)
      border-radius: 20px
      width 472px
    +above($breakpoints.xxl)
      width 572px

  &__img-berry
    position: absolute
    width: 124px;
    height: auto;
    top: 51px;
    left: -61px;
    +above($breakpoints.sm)
      width: 150px;
      top: -37px;
      left: -93px;
    +above($breakpoints.md)
      width: 222px;
      top: -47px;
      left: -137px;
    +above($breakpoints.xxl)
      width: 322px;
      top: -68px;
      left: -201px;

  &__img-leaf
    width: 100px;
    height: auto;
    position: absolute;
    top: 103px;
    left: -43px;
    +above($breakpoints.sm)
      width: 185px;
      top: -11px;
      left: -64px;
    +above($breakpoints.md)
      width: 225px;
      top: 16px;
      left: -92px;
    +above($breakpoints.xxl)
      width: 285px;
      top: 41px;
      left: -139px;
