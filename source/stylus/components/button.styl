.btn
  height: 45px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #fff
  border-radius: 35px
  // border: 3px solid #fff;
  text-transform: uppercase
  box-shadow: inset 0px -4px 0px 0px rgba(142, 27, 27, 0.5);
  background: radial-gradient(50.00% 32.00% at 50% 0%,rgba(255, 255, 255, 0.3),rgba(255, 255, 255, 0) 100%),rgb(232, 84, 98)
  font-family: 'SofiaSans-ExtraBold'
  font-weight: 800
  font-size: 14px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 15px;
    height: 55px;
  +above($breakpoints.md)
    height: 65px;
    font-size: 16px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 70px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

